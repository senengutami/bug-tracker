pipeline {
  agent any
  stages {
    stage('Unit Tests - Backend') {
      steps {
        script {
          docker.image('golang:1.21').inside('') {
            dir('bugtracker-backend') {
              sh '''
                set -e
                export GOCACHE=/tmp/go-build
                export GOMODCACHE=/tmp/go-mod
                mkdir -p "$GOCACHE" "$GOMODCACHE"
                go mod download
                go test -v ./...
              '''
            }
          }
        }
      }
    }
  }
}
